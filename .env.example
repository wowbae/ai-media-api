# ==================== Database ====================
DATABASE_URL="postgresql://user:password@localhost:5432/ai_media_db"

# ==================== API Keys ====================
# OpenRouter API (для генерации медиа)
OPENROUTER_API_KEY="your_openrouter_api_key"

# GPTunnel API
GPTUNNEL_API_KEY="your_gptunnel_api_key"

# LaoZhang API
LAOZHANG_API_KEY="your_laozhang_api_key"

# Kie.ai API
KIEAI_API_KEY="your_kieai_api_key"

# Wavespeed AI API
WAVESPEED_AI_API_KEY="your_wavespeed_api_key"

# ImgBB API (для загрузки изображений)
IMGBB_API_KEY="your_imgbb_api_key"

# ==================== Telegram ====================
TELEGRAM_BOT_TOKEN="your_telegram_bot_token"
TELEGRAM_MEDIA_GROUP_ID="-100123456789"

# ==================== Server ====================
PORT=4000
APP_URL="http://localhost:3000"
NODE_ENV="development"

# ==================== Auth ====================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
PASSWORD_RESET_TOKEN_EXPIRES_IN="1h"

# ==================== Email (для сброса пароля) ====================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"
EMAIL_FROM="AI Media API <noreply@yourdomain.com>"

# ==================== Media Storage ====================
MEDIA_STORAGE_PATH="ai-media"
MAX_FILE_SIZE_MB=50
